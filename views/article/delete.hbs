<div class="container body-content span=8 offset=2">
    {{#if error}}
        <div class="has-error">
            <p>{{error}}</p>
        </div>
    {{/if}}
    <div class="well">
        <form class="form-horizontal" method="POST">
            <fieldset>
                <legend>Delete the following article</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleTitle">Article Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title" name="title" required value="{{title}}" disabled="disabled">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="pictureUrl">Image URL</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="pictureUrl" placeholder="Post your image" name="pictureUrl" required value="{{pictureUrl}}" disabled="disabled">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleSummary">Summary</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleSummary" rows="5" name="summary" required disabled="disabled">{{summary}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articleContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="articleContent" rows="5" name="content" required disabled="disabled">{{content}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
